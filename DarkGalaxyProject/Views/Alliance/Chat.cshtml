@using DarkGalaxyProject.Models.Alliance
@model ChatFormViewModel

@{
    ViewData["Title"] = "AllAliances";
}

@if (TempData["Message"] != null)
{
    <p> @TempData["Message"] </p>
}

@foreach (var message in Model.Messages)
{
    <hr />
    <div class="row">
        <div class="col-md-4">
            <span>@message.Sender @message.TimeOfSending</span><br />
            <span>@message.Content</span><br />
        </div>
    </div>
}

<div class="row">
    <div class="col-md-4">
        <form asp-action="Send">
            <div class="form-group">
                <label asp-for="Content" class="control-label"></label>
                <input asp-for="Content" class="form-control" />
                <span asp-validation-for="Content" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input asp-for="AllianceId" hidden value=@Model.AllianceId class="form-control" />
            </div>
            <div class="form-group">
                <input asp-for="PlayerId" hidden value=@Model.PlayerId class="form-control" />
            </div>
            <div class="form-group">
                <input asp-for="Player" hidden value=@Model.Player class="form-control" />
            </div>
            <div class="form-group">
                <input type="submit" value="Send" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
